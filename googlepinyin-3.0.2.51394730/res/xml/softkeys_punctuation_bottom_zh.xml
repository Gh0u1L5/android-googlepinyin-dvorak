<?xml version="1.0" encoding="utf-8"?>
<framework>
    <softkeys>
        <softkey id="@id/softkey_bottom_comma_zh" layout="@layout/softkey_icon_bottom" popup_timing="ON_TOUCH" multi_touch="true">
            <action type="PRESS" keycode="PLAIN_TEXT" intention="COMMIT" data="，" />
            <icon location="@id/icon_bottom" value="@drawable/ic_key_comma_fullwidth" />
        </softkey>
        <softkey id="@id/softkey_bottom_sentence_zh" layout="@layout/softkey_icon_bottom" popup_timing="ON_TOUCH" multi_touch="true">
            <action type="PRESS" keycode="PLAIN_TEXT" intention="COMMIT" data="。" />
            <icon location="@id/icon_bottom" value="@drawable/ic_key_full_stop_ideographic" />
        </softkey>
        <softkey_list splitter=",">
            <softkey id="@id/softkey_bottom_sentence_zh_popup_punctuation" layout="@layout/softkey_icon_bottom_label_sub" popup_timing="ON_TOUCH" multi_touch="true">
                <action type="PRESS" keycode="PLAIN_TEXT" intention="COMMIT" data="。" />
                <action type="LONG_PRESS" data="！,？,…,.,～,:P,:D,:(,:),^_^" keycode="PLAIN_TEXT" intention="COMMIT" popup_label="！,？,…,.,～,:P,:D,:(,:),^_^" popup_layout="@layout/popup_bubble_rectangular_label_small" />
                <icon location="@id/icon_bottom" value="@drawable/ic_key_full_stop_ideographic" />
                <label location="@id/label_sub" value="…" />
            </softkey>
            <softkey id="@id/softkey_bottom_sentence_zh_popup_smiley" layout="@layout/softkey_icon_bottom_label_sub" popup_timing="ON_TOUCH" multi_touch="true">
                <action type="PRESS" keycode="PLAIN_TEXT" intention="COMMIT" data="。" />
                <action type="LONG_PRESS" data=":P,:D,:(,:),^_^" keycode="PLAIN_TEXT" intention="COMMIT" popup_label=":P,:D,:(,:),^_^" popup_layout="@layout/popup_bubble_rectangular_label_small" />
                <icon location="@id/icon_bottom" value="@drawable/ic_key_full_stop_ideographic" />
                <label location="@id/label_sub" value="…" />
            </softkey>
        </softkey_list>
    </softkeys>
</framework>
<?xml version="1.0" encoding="utf-8"?>
<framework>
    <include href="@xml/softkeys_function_space_zh" />
    <include href="@xml/softkeys_function_zh_common" />
    <include href="@xml/softkeys_function_9key_zh_shift" />
    <softkeys>
        <softkey id="@id/softkey_ci" layout="@layout/softkey_icon" multi_touch="true" content_description="@string/separator_key_content_desc">
            <action type="PRESS" keycode="APOSTROPHE" data="'" intention="DECODE" />
            <icon location="@id/icon" value="@attr/IconCiDarkKey" />
        </softkey>
        <softkey id="@id/softkey_turn_on_single_character_candidate" layout="@layout/softkey_label_darkkey_small_center_icon_bottom" multi_touch="true" content_description="@string/turn_on_single_character_candidate_key_content_desc">
            <action type="PRESS" keycode="KEYBOARD_STATE_ON" data="SINGLE_CHARACTER_CANDIDATE" />
            <label location="@id/label" value="@string/single_character_candidate_label" />
            <icon location="@id/icon_bottom" value="@attr/IconBarUnlock" />
        </softkey>
        <softkey id="@id/softkey_turn_off_single_character_candidate" layout="@layout/softkey_label_darkkey_small_center_icon_bottom" multi_touch="true" content_description="@string/turn_off_single_character_candidate_key_content_desc">
            <action type="PRESS" keycode="KEYBOARD_STATE_OFF" data="SINGLE_CHARACTER_CANDIDATE" />
            <label location="@id/label" value="@string/single_character_candidate_label" />
            <icon location="@id/icon_bottom" value="@attr/IconBarGreen" />
        </softkey>
    </softkeys>
</framework>